# MyPak Connect - Environment Variables Template
# Copy this to .env.local and fill in your values

# ============================================================================
# Database
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?sslmode=disable
DATABASE_URL="postgresql://user:password@host:port/database"

# ============================================================================
# Authentication
# ============================================================================
# Secret key for JWT token signing (minimum 32 characters)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=""

# ============================================================================
# Optional: Dev Tools
# ============================================================================
# Show dev tools in production (for demo/testing)
# Set to "true" to enable, omit or "false" to disable
# NEXT_PUBLIC_SHOW_DEV_TOOLS=false
