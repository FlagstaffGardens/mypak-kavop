# MyPak Connect - Environment Variables Template
# Copy this to .env.local and fill in your values

# ============================================================================
# Database
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?sslmode=disable
DATABASE_URL="postgresql://user:password@host:port/database"

# ============================================================================
# Authentication
# ============================================================================
# Secret key for Better Auth (minimum 32 characters)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=""

# Better Auth base URL (for generating magic links, verification URLs)
# Development: http://localhost:3000
# Production: https://your-domain.com
BETTER_AUTH_URL="http://localhost:3000"

# Public app URL (used by Next.js client-side)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================================================
# Email (Resend)
# ============================================================================
# Resend API key for sending authentication emails
# Get from: https://resend.com/api-keys
RESEND_API_KEY=""

# ============================================================================
# ERP API
# ============================================================================
# MyPak ERP API base URL
MYPAK_ERP_API_URL="https://api.mypak.com"

# ============================================================================
# Optional: Dev Tools
# ============================================================================
# Show dev tools in production (for demo/testing)
# Set to "true" to enable, omit or "false" to disable
# NEXT_PUBLIC_SHOW_DEV_TOOLS=false
